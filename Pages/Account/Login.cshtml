@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/login.css"/>
    <title>Index</title>
</head>
<body>
    <div class="login">
        <h1>Login</h1>
        <form method="post" asp-page="Index">
            <input type="text" placeholder="Username" asp-for="@Model.Username" />
            <input type="password" placeholder="Password" asp-for="@Model.Password" />
            <button type="submit" class="btn btn-primary btn-block btn-large">Login</button>
        </form>
        @Model.Msg
    </div>
</body>
</html>